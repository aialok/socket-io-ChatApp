<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Messenger Clone</title>

    <style>
      body {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f8f8;
      }

      #messenger-container {
        max-width: 400px;
        margin: 50px auto;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
        font-size: 14px;
      }

      #header {
        background-color: #4267b2;
        color: #fff;
        padding: 10px;
        text-align: center;
      }

      #chat-container {
        padding: 10px;
        overflow-y: scroll;
        max-height: 400px;
      }

      .message {
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
      }

      .message p {
        background-color: #e9ebee;
        padding: 10px;
        border-radius: 10px;
        display: inline-block;
        max-width: 70%;
        word-wrap: break-word;
        margin-bottom: 5px;
      }

      .message.sent p {
        background-color: #0084ff;
        color: #fff;
        align-self: flex-end;
      }

      .message.sent {
        align-items: flex-end;
      }

      #input-container {
        display: flex;
        align-items: center;
        background-color: #f8f8f8;
        padding: 10px;
      }

      #message-input {
        flex-grow: 1;
        padding: 10px;
        border: none;
        border-radius: 20px;
        outline: none;
        margin-right: 10px;
      }

      #send-button {
        width: 40px;
        height: 40px;
        padding: 5px;
        background-color: #0084ff;
        color: #fff;
        border: none;
        border-radius: 10%;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <div id="messenger-container">
      <div id="header">Messenger</div>
      <div id="chat-container">
        <div class="message">
          <p>Hello!</p>
        </div>
        <div class="message sent">
          <p>Hi there!</p>
        </div>
        <div class="message">
          <p>Hello!</p>
        </div>
        <div class="message sent">
          <p>Hi there!</p>
        </div>
      </div>
      <div id="input-container">
        <input
          type="text"
          id="message-input"
          placeholder="Type your message..."
        />
        <button id="send-button">Send</button>
      </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>

    <script>
      const socket = io();

      const msgList = document.createElement("li");
      const msgBox = document.getElementById("message-input");
      const form = document.getElementById("form");
      const btn = document.getElementById("send-button");
      const msgContainer = document.getElementById("chat-container");

      const username = prompt("Enter Your Name");

      btn.onclick = () => {
        socket.emit("msg_send", {
          msg: msgBox.value,
          username,
        });

        msgBox.value = "";
        console.log("clicked");
      };

      socket.on("msg_received", (data) => {
        console.log(data);

        // console.log(username, data.username)

        const div = document.createElement('div');

         const para = document.createElement('p')
         
         para.innerText = data.msg;

         if(data.username== username){
            div.setAttribute('class', 'message sent')
         }
         else{
            div.setAttribute('class', 'message')
         }
         console.log(div)
         console.log(para)
         div.appendChild(para);

         msgContainer.appendChild(div);

         msgContainer.scrollTo(0, msgContainer.scrollHeight);
      });
    </script>
  </body>
</html>
